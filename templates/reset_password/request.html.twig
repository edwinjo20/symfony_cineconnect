{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 rounded-lg" style="max-width: 400px; width: 100%; background-color: #1e293b; color: white;">
            <div class="card-body text-center">
                <h2 class="mb-4">Reset Password</h2>

                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Enter your email</label>
                        <input type="email" id="email" name="email" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="your@email.com" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">Send Reset Link</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
